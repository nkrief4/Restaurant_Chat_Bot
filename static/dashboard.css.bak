    }

    .main {
      padding: 32px 24px 48px;
    }

    .section {
      padding: 24px;
    }

    .sidebar-toggle {
      display: inline-flex;
    }

    .topbar {
      align-items: flex-start;
    }

    .overview-columns {
      grid-template-columns: minmax(0, 1fr);
    }

    .overview-chat-wrapper {
      grid-template-columns: 1fr;
    }

    .restaurants-grid,
    .card-grid,
    .stats-detail-grid,
    .billing-grid {
      grid-template-columns: 1fr;
    }

    .chatbot-shell {
      padding: 24px;
    }
  }

  @media (max-width: 768px) {
    .topbar {
      flex-direction: column;
    }

    .overview-cta,
    .restaurants-cta {
      flex-direction: column;
      align-items: stretch;
    }

    .overview-cta button,
    .restaurants-cta button,
    .restaurant-card-actions button,
    .chatbot-form .primary-btn,
    .chatbot-fullscreen-btn {
      width: 100%;
    }

    .chatbot-toolbar {
      flex-direction: column;
      align-items: stretch;
    }
  }

  @media (max-width: 560px) {
    .main {
      padding: 20px 14px 32px;
    }

    .section {
      padding: 20px;
      border-radius: 18px;
    }

    .chat-preview-form,
    .chatbot-form {
      flex-direction: column;
    }
  }

  /* Animations */
  @keyframes shimmer {
    0% {
      background-position: -200px 0;
    }

    100% {
      background-position: 200px 0;
    }
  }

  @keyframes typingDots {

    0%,
    100% {
      opacity: 0.3;
      transform: translateY(0);
    }

    50% {
      opacity: 1;
      transform: translateY(-3px);
    }
  }

  @keyframes caretBlink {

    0%,
    100% {
      opacity: 0;
    }

    50% {
      opacity: 1;
    }
  }
