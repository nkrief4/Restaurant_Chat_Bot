:root {
  --primary: #3a75ff;
  --primary-hover: #315fcb;
  --bg: #f5f7fa;
  --text: #1a1f36;
  --text-muted: #6b7280;
  --card-bg: #ffffff;
  --sidebar-bg: #ffffff;
  --border: #e3e7ef;
  --danger: #c63c3c;
  --success: #2fb375;
  --shadow-soft: 0 20px 60px rgba(16, 34, 74, 0.08);
  --shadow-strong: 0 32px 70px rgba(16, 34, 74, 0.14);
  font-family: 'Inter', -apple-system, BlinkMacSystemFont, 'Segoe UI', sans-serif;
}

*,
*::before,
*::after {
  box-sizing: border-box;
}

body {
  margin: 0;
  min-height: 100vh;
  background: var(--bg);
  color: var(--text);
  font-family: inherit;
  line-height: 1.5;
}

body.sidebar-overlay-open {
  overflow: hidden;
}

body.dashboard-loading {
  overflow: hidden;
}


.dashboard-loading-overlay {
  position: fixed;
  inset: 0;
  background: radial-gradient(circle at 20% 20%, rgba(58, 117, 255, 0.15), transparent 55%),
    linear-gradient(180deg, #f7f9fc, #edf2ff);
  display: flex;
  align-items: center;
  justify-content: center;
  flex-direction: column;
  gap: 16px;
  z-index: 120;
  transition: opacity 0.35s ease, visibility 0.35s ease;
  animation: overlayGlow 4s ease-in-out infinite;
}

.dashboard-loading-overlay.is-hidden {
  opacity: 0;
  visibility: hidden;
  pointer-events: none;
}


.loading-indicator {
  background: var(--card-bg);
  border-radius: 24px;
  padding: 32px 40px;
  box-shadow: var(--shadow-soft);
  text-align: center;
  position: relative;
  overflow: hidden;
  z-index: 1;
  animation: floatCard 2.6s ease-in-out infinite;
}

.loading-indicator::before {
  content: '';
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  height: 4px;
  background: linear-gradient(90deg, var(--primary), var(--primary-hover));
  animation: loadingBar 2s ease-in-out infinite;
  z-index: 2;
}

@keyframes loadingBar {
  0% {
    transform: translateX(-100%);
  }

  100% {
    transform: translateX(100%);
  }
}

.loading-indicator p {
  margin: 16px 0 0;
  color: var(--text-muted);
  font-weight: 500;
  animation: pulseText 2s ease-in-out infinite;
}

.loading-spinner {
  position: relative;
  width: 56px;
  height: 56px;
}

.loading-spinner::before,
.loading-spinner::after {
  content: '';
  position: absolute;
  inset: 0;
  border-radius: 50%;
  border: 4px solid transparent;
}

.loading-spinner::before {
  border-top-color: var(--primary);
  border-left-color: var(--primary);
  animation: dashboard-spinner 0.9s linear infinite;
}

.loading-spinner::after {
  border-bottom-color: rgba(58, 117, 255, 0.35);
  border-right-color: rgba(58, 117, 255, 0.35);
  animation: dashboard-spinner 1.5s linear infinite reverse;
}

@keyframes dashboard-spinner {
  to {
    transform: rotate(360deg);
  }
}

@keyframes overlayGlow {
  0% {
    opacity: 0.98;
  }

  50% {
    opacity: 1;
    filter: saturate(1.05);
  }

  100% {
    opacity: 0.98;
  }
}

@keyframes floatCard {
  0% {
    transform: translateY(0);
  }

  50% {
    transform: translateY(-6px);
    box-shadow: 0 28px 50px rgba(16, 34, 74, 0.12);
  }

  100% {
    transform: translateY(0);
  }
}

@keyframes pulseText {
  0% {
    opacity: 0.65;
  }

  50% {
    opacity: 1;
  }

  100% {
    opacity: 0.65;
  }
}

a {
  color: inherit;
}

img {
  max-width: 100%;
  display: block;
}

button,
input,
select,
textarea {
  font: inherit;
  color: inherit;
}

button {
  cursor: pointer;
  background: none;
  border: none;
}

.muted {
  color: var(--text-muted);
}

.eyebrow {
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 0.2em;
  font-weight: 600;
  margin: 0 0 8px;
  color: var(--primary);
}

.subtitle {
  margin: 8px 0 0;
  color: var(--text-muted);
}

.sr-only {
  position: absolute;
  width: 1px;
  height: 1px;
  padding: 0;
  margin: -1px;
  overflow: hidden;
  clip: rect(0, 0, 0, 0);
  border: 0;
}

/* Layout */
.dashboard {
  display: grid;
  grid-template-columns: minmax(240px, 260px) 1fr;
  min-height: 100vh;
  position: relative;
}

.sidebar {
  background: var(--sidebar-bg);
  border-right: 1px solid var(--border);
  padding: 32px 24px;
  display: flex;
  flex-direction: column;
  gap: 32px;
  position: sticky;
  top: 0;
  height: 100vh;
  overflow-y: auto;
  z-index: 30;
}

.sidebar-backdrop {
  position: fixed;
  inset: 0;
  background: rgba(15, 23, 42, 0.4);
  opacity: 0;
  visibility: hidden;
  pointer-events: none;
  transition: opacity 0.25s ease, visibility 0.25s ease;
  z-index: 20;
}

.dashboard.sidebar-open .sidebar-backdrop {
  opacity: 1;
  visibility: visible;
  pointer-events: auto;
}

.main {
  padding: 40px 56px;
  display: flex;
  flex-direction: column;
  gap: 32px;
}

/* Sidebar */
.logo {
  display: flex;
  align-items: center;
  gap: 16px;
}

.logo-icon {
  width: 44px;
  height: 44px;
  border-radius: 12px;
  background: linear-gradient(135deg, var(--primary), #6b9dff);
  color: #fff;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-weight: 700;
}

.logo-title {
  margin: 0;
  font-size: 1.1rem;
  font-weight: 600;
}

.logo-subtitle {
  margin: 0;
  color: var(--text-muted);
}

.nav {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.nav-group {
  display: flex;
  flex-direction: column;
}

.nav-link-with-menu {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 10px;
}

.nav-link-caret {
  width: 0;
  height: 0;
  border-left: 6px solid transparent;
  border-right: 6px solid transparent;
  border-top: 6px solid currentColor;
  transition: transform 0.2s ease;
}

.nav-submenu {
  display: none;
  flex-direction: column;
  margin-left: 12px;
  margin-top: 4px;
  padding-left: 10px;
  border-left: 1px solid rgba(255, 255, 255, 0.08);
  gap: 4px;
}

.nav-group:hover .nav-submenu,
.nav-group:focus-within .nav-submenu,
.nav-submenu.is-open {
  display: flex;
}

.nav-group:hover .nav-link-caret,
.nav-group:focus-within .nav-link-caret,
.nav-link-with-menu[aria-expanded="true"] .nav-link-caret {
  transform: rotate(180deg);
}

.nav-sub-link {
  font-size: 0.9rem;
  padding-left: 32px;
}

.nav-link {
  border-radius: 12px;
  padding: 12px 16px;
  text-align: left;
  background: transparent;
  color: var(--text-muted);
  font-weight: 500;
  transition: background 0.2s ease, color 0.2s ease;
}

.nav-link:hover,
.nav-link:focus-visible {
  background: rgba(58, 117, 255, 0.12);
  color: var(--text);
}

.nav-link.active {
  background: rgba(58, 117, 255, 0.18);
  color: var(--primary);
  font-weight: 600;
}


.nav-link-logout {
  margin-top: 16px;
  border: 1px solid var(--border);
  color: var(--danger);
  font-weight: 600;
  display: inline-flex;
  align-items: center;
  gap: 8px;
  background: #fff;
  box-shadow: none;
  transition: background 0.2s ease, border-color 0.2s ease, color 0.2s ease;
}

.nav-link-logout:hover,
.nav-link-logout:focus-visible {
  background: rgba(198, 60, 60, 0.08);
  border-color: rgba(198, 60, 60, 0.4);
  color: var(--danger);
}

.nav-link-logout .logout-icon {
  position: relative;
  width: 16px;
  height: 16px;
  border: 2px solid currentColor;
  border-radius: 4px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
}

.nav-link-logout .logout-icon::before {
  content: '';
  position: absolute;
  right: -7px;
  top: 50%;
  width: 8px;
  height: 2px;
  background: currentColor;
  transform: translateY(-50%);
  border-radius: 999px;
}

.nav-link-logout .logout-icon::after {
  content: '';
  position: absolute;
  right: -6px;
  top: 50%;
  width: 5px;
  height: 5px;
  border-top: 2px solid currentColor;
  border-right: 2px solid currentColor;
  transform: translateY(-50%) rotate(45deg);
}

.sidebar-footer {
  margin-top: auto;
  border-top: 1px solid var(--border);
  padding-top: 24px;
}

.support-link {
  color: var(--primary);
  font-weight: 600;
  text-decoration: none;
}

/* Buttons */
.primary-btn-date {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  padding: 10px 20px;
  border-radius: 10px;
  border: none;
  font-weight: 600;
  font-size: 0.9rem;
  line-height: 1.4;
  transition: transform 0.2s ease, box-shadow 0.2s ease, background 0.2s ease;
  background-color: #2fb375;
}

.primary-btn,
.secondary-btn {
  display: inline-flex;
  align-items: center;
  justify-content: center;
  gap: 8px;
  padding: 10px 20px;
  border-radius: 10px;
  border: none;
  font-weight: 600;
  font-size: 0.9rem;
  line-height: 1.4;
  transition: transform 0.2s ease, box-shadow 0.2s ease, background 0.2s ease;
}

.primary-btn {
  background: var(--primary);
  color: #fff;
  box-shadow: 0 10px 24px rgba(58, 117, 255, 0.25);
}

.primary-btn:hover {
  background: var(--primary-hover);
  transform: translateY(-1px);
}

.secondary-btn {
  background: rgba(58, 117, 255, 0.12);
  color: var(--primary);
  border: 1px solid rgba(58, 117, 255, 0.3);
}

.secondary-btn:hover {
  background: rgba(58, 117, 255, 0.18);
}

.ghost-btn {
  border: 1px solid var(--border);
  border-radius: 10px;
  padding: 10px 16px;
  background: transparent;
  font-weight: 600;
  font-size: 0.9rem;
  transition: background 0.2s ease, border-color 0.2s ease;
}

.ghost-btn:hover {
  background: rgba(58, 117, 255, 0.08);
  border-color: rgba(58, 117, 255, 0.4);
}

.icon-btn {
  width: 44px;
  height: 44px;
  border-radius: 12px;
  align-items: center;
  justify-content: center;
  padding: 0;
}

.sidebar-toggle {
  display: none;
}

.sidebar-toggle-icon {
  position: relative;
  width: 18px;
  height: 2px;
  border-radius: 999px;
  background: currentColor;
}

.sidebar-toggle-icon::before,
.sidebar-toggle-icon::after {
  content: '';
  position: absolute;
  left: 0;
  width: 100%;
  height: 2px;
  background: currentColor;
  border-radius: 999px;
}

.sidebar-toggle-icon::before {
  transform: translateY(-6px);
}

.sidebar-toggle-icon::after {
  transform: translateY(6px);
}

.dashboard.sidebar-open .sidebar-toggle-icon {
  background: transparent;
}

.dashboard.sidebar-open .sidebar-toggle-icon::before {
  transform: rotate(45deg);
}

.dashboard.sidebar-open .sidebar-toggle-icon::after {
  transform: rotate(-45deg);
}

/* Topbar */
.topbar {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 24px;
  flex-wrap: wrap;
}

.dashboard:not([data-active-section='overview']) .topbar-content,
.dashboard:not([data-active-section='overview']) .topbar-actions {
  display: none;
}

.topbar-content {
  flex: 1 1 60%;
  min-width: 280px;
}

.topbar-actions {
  display: flex;
  gap: 12px;
  align-items: center;
  flex-wrap: wrap;
}

.user-pill {
  padding: 12px 20px;
  border-radius: 999px;
  background: #fff;
  border: 1px solid var(--border);
  display: flex;
  flex-direction: column;
  gap: 4px;
  box-shadow: var(--shadow-soft);
}

.user-name {
  font-weight: 600;
}

.user-plan {
  color: var(--text-muted);
  font-size: 0.85rem;
}

/* Sections */
.section {
  display: none;
  background: var(--card-bg);
  border-radius: 24px;
  padding: 32px;
  box-shadow: var(--shadow-soft);
}

.section.active-section {
  display: block;
}

.section-header {
  display: flex;
  justify-content: space-between;
  gap: 18px;
  align-items: flex-start;
  flex-wrap: wrap;
  margin-bottom: 24px;
}

.section-header h2 {
  margin: 0 0 8px;
}

.section-picker {
  display: flex;
  flex-direction: column;
  gap: 6px;
  font-size: 0.9rem;
  color: var(--text-muted);
}

.section-picker select {
  min-width: 220px;
  border-radius: 10px;
  border: 1px solid var(--border);
  padding: 8px 12px;
  font-size: 0.95rem;
}

/* Cards & KPIs */
.card {
  border: 1px solid var(--border);
  border-radius: 20px;
  padding: 24px;
  background: var(--card-bg);
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 16px;
}

.kpi-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(200px, 1fr));
  gap: 16px;
}

.kpi-card {
  border: 1px solid var(--border);
  border-radius: 20px;
  padding: 20px;
  display: flex;
  flex-direction: column;
  gap: 6px;
  background: #fefefe;
}

.kpi-label {
  margin: 0;
  color: var(--text-muted);
  font-size: 0.78rem;
  letter-spacing: 0.1em;
  text-transform: uppercase;
}

.kpi-card h3 {
  margin: 0;
  font-size: 1.6rem;
}

.kpi-detail {
  margin: 0;
  color: var(--text-muted);
}

.chart-placeholder {
  border: 1px solid var(--border);
  border-radius: 20px;
  padding: 12px 16px;
  min-height: 280px;
  background: #fff;
  position: relative;
}

.chart-placeholder canvas {
  width: 100% !important;
  display: block;
}

.chart-empty {
  position: absolute;
  inset: 0;
  display: flex;
  align-items: center;
  justify-content: center;
  margin: 0;
  font-weight: 500;
  color: var(--text-muted);
  background: linear-gradient(180deg, rgba(245, 247, 250, 0.7), rgba(255, 255, 255, 0.9));
  border-radius: 18px;
  pointer-events: none;
}

.chart-placeholder canvas[hidden],
.chart-empty[hidden] {
  display: none !important;
}

/* Overview */
.overview-header {
  gap: 24px;
  align-items: flex-start;
}

.overview-header-right {
  display: flex;
  gap: 16px;
  align-items: center;
  flex-wrap: wrap;
}

.overview-meta {
  display: flex;
  gap: 12px;
  flex-wrap: wrap;
}

.meta-pill {
  border: 1px solid var(--border);
  border-radius: 16px;
  padding: 14px 18px;
  min-width: 180px;
  display: flex;
  flex-direction: column;
  gap: 4px;
  background: #fff;
  box-shadow: var(--shadow-soft);
}

.meta-label {
  font-size: 0.75rem;
  letter-spacing: 0.1em;
  text-transform: uppercase;
  color: var(--text-muted);
}

.overview-layout {
  display: flex;
  flex-direction: column;
  gap: 32px;
}

.overview-main,
.overview-sidebar {
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.overview-columns {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 24px;
  align-items: stretch;
}

.overview-restaurants-block {
  border: 1px solid var(--border);
  border-radius: 20px;
  padding: 24px;
  background: #fff;
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.overview-restaurants-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  gap: 16px;
  margin-bottom: 16px;
}

.overview-restaurant-cards {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(260px, 1fr));
  gap: 24px;
}

.overview-restaurant-card {
  border: 1px solid var(--border);
  border-radius: 18px;
  padding: 18px;
  background: linear-gradient(180deg, rgba(58, 117, 255, 0.08), rgba(255, 255, 255, 0.95));
  display: flex;
  flex-direction: column;
  gap: 8px;
  cursor: pointer;
  transition: transform 0.18s ease, box-shadow 0.18s ease;
}

.overview-restaurant-card:hover,
.overview-restaurant-card:focus-visible {
  transform: translateY(-4px);
  box-shadow: 0 16px 32px rgba(58, 117, 255, 0.16);
}

.overview-restaurant-card.selected {
  border-color: rgba(58, 117, 255, 0.6);
  box-shadow: 0 18px 36px rgba(58, 117, 255, 0.18);
}

.card-meta {
  margin: 0;
  color: var(--text-muted);
  font-size: 0.9rem;
}

.card-actions {
  margin-top: auto;
  display: flex;
  gap: 12px;
}

.overview-cta,
.restaurants-cta {
  border: 1px dashed rgba(58, 117, 255, 0.35);
  border-radius: 18px;
  padding: 18px 24px;
  margin-bottom: 24px;
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 16px;
  background: rgba(58, 117, 255, 0.06);
}

/* Range filter */
.range-filter {
  border: 1px solid var(--border);
  border-radius: 16px;
  padding: 12px;
  background: #fff;
  box-shadow: var(--shadow-soft);
  display: flex;
  flex-wrap: wrap;
  gap: 16px;
  align-items: center;
}

.filter-inputs {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
  align-items: center;
}

.filter-inputs label {
  display: flex;
  flex-direction: row;
  align-items: center;
  gap: 8px;
}

.filter-inputs span {
  font-size: 0.9rem;
  color: var(--text-muted);
  font-weight: 500;
}

.filter-actions {
  display: flex;
  justify-content: space-between;
  gap: 12px;
  flex-wrap: wrap;
  align-items: center;
}

.preset-group {
  display: flex;
  gap: 8px;
  flex-wrap: wrap;
}

/* Restaurants */
.restaurants-grid {
  display: grid;
  grid-template-columns: repeat(auto-fill, minmax(280px, 1fr));
  gap: 20px;
}

.restaurant-card {
  border: 1px solid var(--border);
  border-radius: 20px;
  padding: 20px;
  background: #fff;
  display: flex;
  flex-direction: column;
  gap: 12px;
  box-shadow: 0 15px 30px rgba(12, 32, 67, 0.06);
  transition: transform 0.18s ease, border-color 0.18s ease, box-shadow 0.18s ease;
}

.restaurant-card:hover {
  transform: translateY(-6px);
  border-color: rgba(58, 117, 255, 0.5);
  box-shadow: 0 25px 45px rgba(58, 117, 255, 0.18);
}

.restaurant-card-header {
  display: flex;
  justify-content: space-between;
  align-items: flex-start;
  gap: 12px;
}

.status-badge {
  font-size: 0.75rem;
  text-transform: uppercase;
  letter-spacing: 0.08em;
  border-radius: 999px;
  padding: 4px 10px;
  background: rgba(58, 117, 255, 0.12);
  color: var(--primary);
}

.restaurant-meta {
  display: flex;
  flex-wrap: wrap;
  gap: 8px;
  color: var(--text-muted);
  font-size: 0.9rem;
}

.restaurant-meta span {
  align-items: center;
  display: inline-flex;
  gap: 6px;
  padding: 6px 10px;
  border-radius: 999px;
  background: rgba(15, 23, 42, 0.04);
}

.restaurant-card-actions {
  display: flex;
  gap: 10px;
  flex-wrap: wrap;
}

.restaurant-card-actions button {
  flex: 1;
  min-width: 140px;
}

.empty-state {
  border: 1px dashed var(--border);
  border-radius: 16px;
  padding: 28px;
  text-align: center;
  background: rgba(15, 23, 42, 0.03);
}

/* Overview chat */
.overview-chat-wrapper {
  display: flex;
  flex-direction: column;
  gap: 16px;
  align-self: flex-start;
  height: auto;
  min-height: 0;
}

.overview-chat-config {
  border: 1px solid var(--border);
  border-radius: 20px;
  padding: 20px;
  background: #fff;
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.overview-chat-preview {
  border: 1px solid var(--border);
  border-radius: 20px;
  padding: 20px;
  background: linear-gradient(155deg, rgba(58, 117, 255, 0.08), rgba(255, 255, 255, 0.95));
  flex: 0 0 auto;
  height: 520px;
  display: flex;
  flex-direction: column;
  position: relative;
  overflow: hidden;
}

.chat-preview-body {
  border: 1px solid rgba(15, 23, 42, 0.08);
  border-radius: 16px;
  padding: 18px;
  background: rgba(245, 247, 250, 0.9);
  flex: 1 1 auto;
  min-height: 0;
  display: flex;
  flex-direction: column;
  gap: 12px;
  overflow: hidden;
}

.chat-preview-empty {
  margin: auto;
  text-align: center;
  color: var(--text-muted);
}

.chat-preview-empty[hidden] {
  display: none;
}

.chat-preview-messages {
  display: flex;
  flex-direction: column;
  gap: 14px;
  flex: 1;
  min-height: 0;
  overflow-y: auto;
  padding-right: 6px;
  scroll-behavior: smooth;
}

.chat-preview-messages[hidden] {
  display: none;
}

.chat-preview-message {
  display: flex;
  gap: 12px;
  align-items: flex-start;
}

.chat-preview-message.user {
  flex-direction: row-reverse;
  text-align: right;
}

.chat-preview-message.user .chat-preview-avatar {
  background: rgba(58, 117, 255, 0.12);
  color: var(--primary);
}

.chat-preview-avatar {
  width: 38px;
  height: 38px;
  border-radius: 12px;
  background: #111827;
  color: #fff;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 0.85rem;
  font-weight: 600;
}

.chat-preview-content {
  border-radius: 16px;
  padding: 12px 14px;
  background: #fff;
  border: 1px solid rgba(15, 23, 42, 0.08);
  max-width: 100%;
  word-break: break-word;
  box-shadow: 0 6px 20px rgba(15, 23, 42, 0.12);
  display: flex;
  flex-direction: column;
  gap: 6px;
  min-width: 0;
  text-align: left;
}

.chat-preview-message.user .chat-preview-content {
  background: var(--primary);
  border-color: rgba(58, 117, 255, 0.2);
  color: #fff;
  box-shadow: 0 10px 26px rgba(58, 117, 255, 0.28);
  text-align: right;
  align-items: flex-end;
}

.chat-preview-meta {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 12px;
  width: 100%;
}

.chat-preview-message.user .chat-preview-meta {
  flex-direction: row-reverse;
}

.chat-preview-author {
  font-size: 0.78rem;
  text-transform: uppercase;
  letter-spacing: 0.08em;
  color: var(--text-muted);
}

.chat-preview-message.user .chat-preview-author {
  color: rgba(255, 255, 255, 0.75);
}

.chat-preview-timestamp {
  font-size: 0.72rem;
  color: var(--text-muted);
  white-space: nowrap;
}

.chat-preview-message.user .chat-preview-timestamp {
  color: rgba(255, 255, 255, 0.8);
}

.chat-preview-text {
  margin: 0;
  font-size: 0.95rem;
}

.chat-preview-typing {
  display: inline-flex;
  align-items: center;
  gap: 8px;
  font-size: 0.9rem;
  color: var(--text-muted);
}

.chat-preview-message.user .chat-preview-typing {
  color: rgba(255, 255, 255, 0.9);
}

.chat-preview-typing-dots {
  display: inline-flex;
  gap: 4px;
}

.chat-preview-typing-dot {
  width: 6px;
  height: 6px;
  border-radius: 50%;
  background: rgba(58, 117, 255, 0.9);
  opacity: 0.45;
  animation: chatTypingDot 1.2s ease-in-out infinite;
}

.chat-preview-typing-dot:nth-child(2) {
  animation-delay: 0.15s;
}

.chat-preview-typing-dot:nth-child(3) {
  animation-delay: 0.3s;
}

@keyframes chatTypingDot {
  0% {
    opacity: 0.35;
    transform: translateY(0);
  }

  50% {
    opacity: 1;
    transform: translateY(-2px);
  }

  100% {
    opacity: 0.35;
    transform: translateY(0);
  }
}

.chat-preview-form {
  margin-top: 16px;
  display: flex;
  gap: 12px;
  align-items: center;
}

.chat-preview-form input {
  flex: 1;
  border: 1px solid var(--border);
  border-radius: 12px;
  padding: 12px 14px;
}

.chat-preview-form button {
  min-width: 120px;
}

@media (max-width: 1024px) {
  .overview-chat-preview {
    height: 460px;
  }
}

@media (max-width: 768px) {
  .overview-chat-preview {
    padding: 16px;
    height: 420px;
  }

  .chat-preview-body {
    padding: 14px;
  }
}

@media (max-width: 640px) {
  .chat-preview-form {
    flex-direction: column;
    align-items: stretch;
  }

  .chat-preview-form button {
    width: 100%;
  }
}

/* Forms */
.form-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(240px, 1fr));
  gap: 20px;
}

.form-mode {
  grid-column: 1 / -1;
  margin: 0;
  padding: 12px 16px;
  border-radius: 12px;
  background: rgba(58, 117, 255, 0.08);
  color: var(--primary);
  font-weight: 600;
}

label {
  display: flex;
  flex-direction: column;
  gap: 8px;
  font-weight: 500;
}

input,
select,
textarea {
  border: 1px solid var(--border);
  border-radius: 12px;
  padding: 10px 12px;
  font-size: 0.9rem;
  background: #fff;
}

textarea {
  resize: vertical;
}

.full-width {
  grid-column: 1 / -1;
}

.form-footer {
  grid-column: 1 / -1;
  display: flex;
  flex-direction: column;
  gap: 8px;
}

.form-hint {
  font-size: 0.9rem;
  color: var(--text-muted);
  margin: 0;
}

.form-error {
  font-size: 0.9rem;
  color: var(--danger);
  margin: 6px 0 0;
  min-height: 1.2em;
}

/* Upload card */
.upload-card {
  border: 1px solid rgba(58, 117, 255, 0.2);
  border-radius: 22px;
  padding: 24px;
  display: flex;
  flex-direction: column;
  gap: 16px;
  background: linear-gradient(180deg, rgba(58, 117, 255, 0.08), rgba(255, 255, 255, 0.94));
  box-shadow: var(--shadow-soft);
}

.upload-card-header {
  display: flex;
  justify-content: space-between;
  gap: 12px;
}


.upload-dropzone {
  border: 1px dashed rgba(58, 117, 255, 0.4);
  border-radius: 18px;
  padding: 20px;
  display: flex;
  gap: 18px;
  align-items: center;
  cursor: pointer;
  background: rgba(255, 255, 255, 0.9);
  position: relative;
}

.upload-dropzone input[type='file'] {
  position: absolute;
  inset: 0;
  opacity: 0;
}

.dropzone-illustration {
  width: 60px;
  height: 60px;
  border-radius: 18px;
  background: radial-gradient(circle, rgba(58, 117, 255, 0.9), rgba(24, 32, 94, 0.85));
  box-shadow: 0 20px 40px rgba(58, 117, 255, 0.35);
}

.dropzone-copy {
  display: flex;
  flex-direction: column;
  gap: 4px;
}

.dropzone-copy span {
  color: var(--text-muted);
}

.upload-dropzone.is-dragover,
.upload-card.has-file .upload-dropzone {
  border-color: var(--primary);
  background: rgba(58, 117, 255, 0.08);
}

.upload-preview {
  display: flex;
  gap: 16px;
  align-items: center;
  padding: 14px 16px;
  border-radius: 16px;
  border: 1px solid rgba(58, 117, 255, 0.1);
  background: rgba(5, 9, 31, 0.03);
  min-height: 72px;
}

.preview-info {
  color: var(--text-muted);
  font-size: 0.9rem;
}

.upload-controls {
  display: flex;
  align-items: center;
  gap: 12px;
}

.ai-upload-btn {
  position: relative;
  overflow: hidden;
}

.ai-glow,
.ai-scanlines {
  position: absolute;
  inset: 0;
  pointer-events: none;
  opacity: 0;
  transition: opacity 0.3s ease;
}

.ai-upload-btn.is-analyzing .ai-glow {
  opacity: 1;
  background: radial-gradient(circle, rgba(255, 255, 255, 0.4), transparent 60%);
}

.ai-upload-btn.is-analyzing .ai-scanlines {
  opacity: 0.4;
  background: repeating-linear-gradient(0deg, rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0.2) 6px, transparent 6px, transparent 12px);
}

/* Chatbot */
.chatbot-section {
  background: transparent;
  box-shadow: none;
  padding: 0;
}

.chatbot-shell {
  border: 1px solid var(--border);
  border-radius: 32px;
  background: var(--card-bg);
  padding: 32px;
  box-shadow: var(--shadow-soft);
  display: flex;
  flex-direction: column;
  gap: 24px;
}

.chatbot-fullscreen-btn {
  border: 1px solid var(--border);
  border-radius: 999px;
  padding: 12px 20px;
  background: #f4f6fb;
  font-weight: 600;
}

.chatbot-fullscreen-btn:disabled,
#chatbot-input:disabled,
.chat-preview-form input:disabled,
#overview-chat-send:disabled,
#chatbot-send-btn:disabled {
  opacity: 0.6;
  cursor: not-allowed;
}

.chatbot-toolbar {
  display: flex;
  gap: 18px;
  flex-wrap: wrap;
  align-items: center;
}

.chatbot-select {
  flex: 1 1 280px;
  min-width: 220px;
}

.chatbot-select label {
  display: block;
  font-size: 0.8rem;
  text-transform: uppercase;
  letter-spacing: 0.08em;
  color: var(--text-muted);
  margin-bottom: 6px;
}

.chatbot-select-wrapper {
  position: relative;
}

.chatbot-select-wrapper select {
  width: 100%;
  border-radius: 18px;
  border: 1px solid var(--border);
  padding: 14px 48px 14px 18px;
  font-size: 1rem;
  background: #fff;
  appearance: none;
}

.chatbot-select-wrapper select:focus {
  outline: none;
  border-color: rgba(58, 117, 255, 0.6);
  box-shadow: 0 0 0 3px rgba(58, 117, 255, 0.18);
}

.chatbot-select-icon {
  position: absolute;
  right: 16px;
  top: 50%;
  width: 12px;
  height: 12px;
  margin-top: -6px;
  border-right: 2px solid var(--text-muted);
  border-bottom: 2px solid var(--text-muted);
  transform: rotate(45deg);
  pointer-events: none;
}

.chatbot-status-text {
  flex: 1 1 200px;
  min-width: 180px;
  margin: 0;
  font-size: 0.95rem;
  color: var(--text-muted);
}

.chatbot-status-text.error {
  color: var(--danger);
}

.chatbot-surface {
  border: 1px solid var(--border);
  border-radius: 28px;
  background: linear-gradient(180deg, #f6f8fc, #ffffff);
  padding: 24px;
  min-height: 320px;
  display: flex;
  flex-direction: column;
  position: relative;
}

.chatbot-thread {
  flex: 1;
  overflow-y: auto;
  display: flex;
  flex-direction: column;
  gap: 16px;
  padding-right: 8px;
}

.chatbot-empty {
  margin: auto;
  text-align: center;
  max-width: 360px;
  color: var(--text-muted);
}

.chatbot-empty[hidden] {
  display: none;
}

.chatbot-typing {
  position: absolute;
  left: 32px;
  bottom: 32px;
  display: inline-flex;
  gap: 8px;
  padding: 12px 18px;
  border-radius: 999px;
  background: linear-gradient(135deg, rgba(255, 255, 255, 0.95), rgba(244, 244, 255, 0.8));
  border: 1px solid rgba(17, 24, 39, 0.12);
  box-shadow: 0 18px 40px rgba(15, 23, 42, 0.25);
}

.chatbot-typing[hidden] {
  display: none !important;
}

.typing-dot {
  width: 7px;
  height: 7px;
  border-radius: 999px;
  background: linear-gradient(135deg, #3a75ff, #69d0ff);
  animation: typingDots 1.4s ease-in-out infinite;
}

.typing-dot:nth-child(2) {
  animation-delay: 0.18s;
}

.typing-dot:nth-child(3) {
  animation-delay: 0.36s;
}

.chatbot-form {
  display: flex;
  gap: 16px;
  align-items: flex-end;
  background: #f6f8fc;
  border-radius: 24px;
  padding: 18px;
  border: 1px solid var(--border);
}

#chatbot-input {
  flex: 1;
  border: none;
  background: transparent;
  resize: none;
  font-size: 1rem;
  line-height: 1.5;
  padding: 0;
}

#chatbot-input:focus {
  outline: none;
}

.chatbot-bubble {
  max-width: min(520px, 100%);
  border-radius: 20px;
  padding: 14px 18px;
  box-shadow: 0 10px 30px rgba(15, 23, 42, 0.08);
  border: 1px solid rgba(15, 23, 42, 0.08);
  display: flex;
  flex-direction: column;
  gap: 6px;
  background: #fff;
}

.chatbot-bubble.user {
  align-self: flex-end;
  background: #111827;
  color: #fff;
  border-color: rgba(17, 24, 39, 0.4);
}

.chatbot-author {
  font-size: 0.78rem;
  text-transform: uppercase;
  letter-spacing: 0.08em;
  color: rgba(17, 24, 39, 0.65);
}

.chatbot-bubble.user .chatbot-author {
  color: rgba(255, 255, 255, 0.7);
}

.chatbot-text p {
  margin: 0 0 6px;
  line-height: 1.5;
}

.chatbot-text p:last-child {
  margin-bottom: 0;
}

.chatbot-text.is-streaming {
  white-space: pre-wrap;
  min-height: 1.4em;
  position: relative;
  padding-right: 10px;
}

.chatbot-text.is-streaming::after {
  content: '';
  position: absolute;
  right: 2px;
  bottom: 4px;
  width: 3px;
  height: 1.2em;
  border-radius: 2px;
  background: currentColor;
  animation: caretBlink 1s steps(2) infinite;
}

.chatbot-feedback {
  margin: 0;
  font-size: 0.9rem;
  color: var(--text-muted);
}

.chatbot-feedback.error {
  color: var(--danger);
}

/* Stats & billing */
.stats-kpis {
  margin-bottom: 24px;
}

.stats-section-header {
  align-items: center;
}

.stats-filter-panel {
  background: var(--card-bg);
  border-radius: 24px;
  padding: 24px;
  box-shadow: var(--shadow-soft);
  border: 1px solid var(--border);
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 24px;
  margin-bottom: 28px;
}

.stats-filter-block {
  display: flex;
  flex-direction: column;
  gap: 16px;
}

.filter-label {
  font-size: 0.9rem;
  letter-spacing: 0.08em;
  text-transform: uppercase;
  color: var(--text-muted);
  margin: 0;
}

.stats-range-pills {
  display: inline-flex;
  flex-wrap: wrap;
  gap: 8px;
}

.range-pill {
  border-radius: 999px;
  border: 1px solid var(--border);
  padding: 8px 16px;
  background: #fff;
  font-weight: 500;
  transition: background 0.2s ease, color 0.2s ease, border-color 0.2s ease;
}

.range-pill:hover,
.range-pill:focus-visible {
  border-color: var(--primary);
  color: var(--primary);
}

.range-pill.active {
  background: rgba(58, 117, 255, 0.12);
  border-color: rgba(58, 117, 255, 0.5);
  color: var(--primary);
}

.stats-custom-range {
  display: flex;
  align-items: flex-end;
  gap: 12px;
  flex-wrap: wrap;
}

.stats-custom-range label {
  display: flex;
  flex-direction: column;
  gap: 6px;
  font-size: 0.9rem;
  color: var(--text-muted);
}

.stats-custom-range input[type="date"] {
  border-radius: 10px;
  border: 1px solid var(--border);
  padding: 8px 12px;
  background: #fff;
  min-width: 160px;
}

.stats-custom-range .ghost-btn {
  align-self: center;
  margin-left: auto;
}

.multi-select {
  position: relative;
}

.multi-select-trigger {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
  border-radius: 16px;
  border: 1px solid var(--border);
  background: #fff;
  padding: 14px 16px;
  font-weight: 600;
  text-align: left;
}

.multi-select-caret {
  border: solid var(--text-muted);
  border-width: 0 1.5px 1.5px 0;
  display: inline-block;
  padding: 5px;
  transform: rotate(45deg);
  transition: transform 0.2s ease;
}

.multi-select-trigger[aria-expanded="true"] .multi-select-caret {
  transform: rotate(-135deg);
}

.multi-select-panel {
  position: absolute;
  top: calc(100% + 8px);
  left: 0;
  right: 0;
  background: #fff;
  border-radius: 20px;
  border: 1px solid var(--border);
  box-shadow: var(--shadow-strong);
  padding: 12px 0;
  z-index: 15;
}

.multi-select-search {
  padding: 0 20px 12px;
}

.multi-select-search input {
  width: 100%;
  border-radius: 999px;
  border: 1px solid var(--border);
  padding: 10px 16px;
}

.multi-select-actions {
  display: flex;
  justify-content: space-between;
  padding: 0 20px 12px;
}

.multi-select-actions button {
  color: var(--primary);
  font-weight: 600;
}

.multi-select-options {
  list-style: none;
  margin: 0;
  max-height: 220px;
  overflow-y: auto;
  padding: 0;
}

.multi-select-options li {
  display: flex;
  align-items: center;
  gap: 10px;
  padding: 10px 20px;
  cursor: pointer;
}

.multi-select-options li input {
  pointer-events: none;
}

.multi-select-options li:hover {
  background: rgba(58, 117, 255, 0.06);
}

.stats-visual-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(280px, 1fr));
  gap: 20px;
}

.stats-breakdown-list {
  list-style: none;
  margin: 0;
  padding: 0;
  display: flex;
  flex-direction: column;
  gap: 14px;
}

.stats-breakdown-list li {
  display: flex;
  flex-direction: column;
  gap: 6px;
}

.stats-breakdown-row {
  display: flex;
  justify-content: space-between;
  font-weight: 600;
}

.stats-breakdown-bar {
  position: relative;
  background: rgba(58, 117, 255, 0.08);
  border-radius: 999px;
  height: 8px;
  overflow: hidden;
}

.stats-breakdown-bar span {
  position: absolute;
  inset: 0;
  border-radius: inherit;
  background: var(--primary);
  transform-origin: left center;
}

.stats-breakdown-share {
  font-size: 0.85rem;
  color: var(--text-muted);
  font-weight: 600;
}

.card-grid,
.stats-detail-grid,
.billing-grid {
  display: grid;
  grid-template-columns: repeat(auto-fit, minmax(260px, 1fr));
  gap: 20px;
}

.top-questions,
.busiest-list {
  list-style: none;
  padding: 0;
  margin: 0;
  display: flex;
  flex-direction: column;
  gap: 12px;
  color: var(--text-muted);
}

.busiest-list li,
.top-questions li {
  display: flex;
  justify-content: space-between;
  gap: 12px;
  border-bottom: 1px solid var(--border);
  padding-bottom: 8px;
}

.busiest-list li:last-child,
.top-questions li:last-child {
  border-bottom: none;
  padding-bottom: 0;
}

.insight-value {
  margin: 0;
  font-size: 1.6rem;
  font-weight: 700;
}

.diet-chart {
  display: flex;
  flex-direction: column;
  gap: 12px;
}

.diet-segment {
  position: relative;
  padding: 12px 14px;
  border-radius: 12px;
  background: rgba(58, 117, 255, 0.08);
}

.diet-segment::before {
  content: attr(data-value);
  position: absolute;
  right: 12px;
  top: 50%;
  transform: translateY(-50%);
  font-weight: 600;
}

.diet-segment::after {
  content: '';
  position: absolute;
  inset: 0;
  border-radius: inherit;
  background: rgba(58, 117, 255, 0.2);
  clip-path: inset(0 calc(100% - var(--value)) 0 0);
  z-index: -1;
}

.badge {
  background: rgba(58, 117, 255, 0.12);
  color: var(--primary);
  border-radius: 999px;
  padding: 6px 14px;
  font-weight: 600;
  font-size: 0.85rem;
}

.table-wrapper {
  border: 1px solid var(--border);
  border-radius: 16px;
  overflow: auto;
}

.table-wrapper table {
  width: 100%;
  border-collapse: collapse;
}

th,
td {
  text-align: left;
  padding: 14px 16px;
  border-bottom: 1px solid var(--border);
  font-size: 0.95rem;
}

th {
  font-size: 0.8rem;
  text-transform: uppercase;
  letter-spacing: 0.08em;
  color: var(--text-muted);
}

tbody tr:last-child td {
  border-bottom: none;
}

.status {
  display: inline-flex;
  align-items: center;
  padding: 4px 10px;
  border-radius: 999px;
  font-size: 0.85rem;
  font-weight: 600;
}

.status.paid {
  background: rgba(47, 179, 117, 0.12);
  color: var(--success);
}

.status.pending {
  background: rgba(255, 193, 58, 0.2);
  color: #c27b00;
}

.status.failed {
  background: rgba(198, 60, 60, 0.15);
  color: var(--danger);
}

/* Gestion restaurants */
.restaurant-management {
  background: var(--card-bg);
  border: 1px solid var(--border);
  border-radius: 28px;
  padding: clamp(20px, 2.8vw, 40px);
  box-shadow: var(--shadow-soft);
}

.restaurant-tabs {
  position: relative;
  display: grid;
  grid-template-columns: repeat(2, minmax(0, 1fr));
  background: linear-gradient(120deg, rgba(58, 117, 255, 0.08), rgba(58, 117, 255, 0.02));
  border-radius: 18px;
  padding: 6px;
  border: 1px solid rgba(58, 117, 255, 0.15);
  overflow: hidden;
}

.restaurant-tab {
  position: relative;
  border: none;
  background: transparent;
  color: var(--text-muted);
  padding: 14px 16px;
  font-weight: 600;
  font-size: 1rem;
  border-radius: 14px;
  transition: color 0.2s ease, transform 0.3s ease;
  z-index: 1;
}

.restaurant-tab.is-active {
  color: var(--primary);
  transform: translateY(-1px);
}

.restaurant-tab:focus-visible {
  outline: 2px solid transparent;
  box-shadow: 0 0 0 3px rgba(58, 117, 255, 0.25);
}

.restaurant-tab-indicator {
  position: absolute;
  top: 6px;
  left: 6px;
  height: calc(100% - 12px);
  width: calc(50% - 12px);
  border-radius: 12px;
  background: #fff;
  box-shadow: 0 15px 25px rgba(58, 117, 255, 0.18);
  transform: translateX(0);
  transition: transform 0.45s cubic-bezier(0.18, 0.89, 0.32, 1.15), width 0.35s ease;
  will-change: transform, width;
  z-index: 0;
}

.restaurant-tabs:has(.restaurant-tab:focus-visible) {
  box-shadow: 0 0 0 2px rgba(58, 117, 255, 0.2);
}

.restaurant-tabs button + button {
  margin-left: 0;
}

.restaurant-panels {
  margin-top: 32px;
  position: relative;
  overflow: hidden;
}

.restaurant-panel-track {
  display: flex;
  gap: 0;
  width: 200%;
  transition: transform 0.55s cubic-bezier(0.19, 1, 0.22, 1);
  will-change: transform;
}

.restaurant-panels[data-active-tab="create"] .restaurant-panel-track {
  transform: translateX(0);
}

.restaurant-panels[data-active-tab="edit"] .restaurant-panel-track {
  transform: translateX(-50%);
}

.restaurant-panel {
  flex: 0 0 50%;
  min-width: 50%;
  padding-right: clamp(12px, 2vw, 32px);
  padding-left: clamp(12px, 2vw, 32px);
  box-sizing: border-box;
  transition: opacity 0.35s ease;
}

.restaurant-panel[aria-hidden="true"] {
  opacity: 0.25;
}

@media (max-width: 768px) {
  .restaurant-panel {
    padding-left: 0;
    padding-right: 0;
  }
}

.panel-intro {
