  }

  .loading-card .skeleton.name {
    width: 60%;
    height: 20px;
  }

  .loading-card .skeleton.line {
    width: 80%;
  }

  .loading-card .skeleton.line.short {
    width: 40%;
  }

  /* Responsive */
  @media (max-width: 1280px) {
    .main {
      padding: 32px 40px 48px;
    }

    .section {
      padding: 28px;
    }
  }

  @media (max-width: 1023px) {
    .dashboard {
      display: block;
    }

    .sidebar {
      position: fixed;
      top: 0;
      left: 0;
      bottom: 0;
      width: min(320px, 80vw);
      transform: translateX(-100%);
      box-shadow: 0 24px 60px rgba(15, 23, 42, 0.25);
      transition: transform 0.3s ease;
      height: 100vh;
      z-index: 50;
    }

