  min-height: 760px;
}

.purchasing-iframe-shell.is-loading .purchasing-iframe {
  filter: grayscale(0.15) brightness(0.96);
}

.purchasing-iframe {
  width: 100%;
  border: none;
  min-height: 760px;
  opacity: 0;
  transform: translateY(10px);
  transition: opacity 0.5s ease, transform 0.5s ease;
  background: #f4f6fb;
}

.purchasing-iframe.is-loaded {
  opacity: 1;
  transform: translateY(0);
}

.purchasing-iframe-loader {
  position: absolute;
  inset: 0;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  gap: 10px;
  background: linear-gradient(145deg, rgba(15, 23, 42, 0.75), rgba(15, 118, 230, 0.85));
  color: #fff;
  text-align: center;
  z-index: 2;
  transition: opacity 0.3s ease, visibility 0.3s ease;
}

.purchasing-iframe-loader.is-hidden {
  opacity: 0;
  visibility: hidden;
}

.loader-dot {
  width: 14px;
  height: 14px;
  border-radius: 50%;
  background: #fff;
  animation: purchasingPulse 1.2s ease infinite;
}

.purchasing-hint {
  margin: 0;
  font-size: 0.9rem;
}

.info-trigger {
  position: relative;
  border: none;
  background: rgba(15, 23, 42, 0.08);
  color: #0f172a;
  width: 32px;
  height: 32px;
  border-radius: 50%;
  font-weight: 600;
  font-size: 0.95rem;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  cursor: pointer;
  transition: background 0.2s ease, transform 0.2s ease;
}

.info-trigger:hover,
.info-trigger:focus-visible {
  background: rgba(37, 99, 235, 0.18);
  color: #0f172a;
  transform: translateY(-1px);
  outline: none;
}

.info-trigger::after {
  content: attr(data-tooltip);
  position: absolute;
  top: -6px;
  right: 110%;
  background: #0f172a;
  color: #fff;
  padding: 8px 12px;
  border-radius: 12px;
  font-size: 0.8rem;
  line-height: 1.3;
  width: 240px;
  opacity: 0;
  pointer-events: none;
  transform: translateY(-10px);
  transition: opacity 0.25s ease, transform 0.25s ease;
  text-align: left;
  box-shadow: 0 10px 30px rgba(15, 23, 42, 0.25);
}

.info-trigger:hover::after,
.info-trigger:focus-visible::after {
  opacity: 1;
  transform: translateY(-4px);
}

.info-trigger::before {
  content: "";
  position: absolute;
  top: 4px;
  right: calc(110% - 6px);
  width: 0;
  height: 0;
  border-width: 6px;
  border-style: solid;
  border-color: transparent transparent transparent #0f172a;
  opacity: 0;
  transition: opacity 0.25s ease;
}

.info-trigger:hover::before,
.info-trigger:focus-visible::before {
  opacity: 1;
}

@media (max-width: 768px) {
  .info-trigger::after {
    width: 200px;
  }
}

@media (max-width: 640px) {
  .info-trigger::after {
    left: 50%;
    right: auto;
    transform: translate(-50%, -10px);
  }
  .info-trigger:hover::after,
  .info-trigger:focus-visible::after {
    transform: translate(-50%, -4px);
  }
  .info-trigger::before {
    display: none;
  }
}

@media (max-width: 1024px) {
  .purchasing-iframe,
  .purchasing-iframe-shell {
    min-height: 900px;
  }
}

@keyframes purchasingPulse {
  0% {
    opacity: 0.4;
    transform: scale(0.9);
  }
  50% {
    opacity: 1;
    transform: scale(1.1);
  }
  100% {
    opacity: 0.4;
    transform: scale(0.9);
  }
}

@media (prefers-reduced-motion: reduce) {
  .purchasing-card,
